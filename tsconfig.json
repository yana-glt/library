{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "typeRoots":  [
        "@types",
        "node_modules/@types",
      ],
  },
  "include": ["src/**/*"],
  "ts-node":{
    "esm":true
  },
}