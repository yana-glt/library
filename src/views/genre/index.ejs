<form action="genre" method="get">
    <div class="search-header text-center">
        <h2 class="text-center">Search Genre</h2>
    </div>
    <div class="form-row">
        <div class="col-12 mb-3">
            <label for="name">Genre</label>
            <input type="text" class="form-control" name="name" id="name" value="<%= searchOption.name%>">
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search" style="color:white;"></i>
            Search
        </button>
        <a href="/genre/new"> <button type="button" class="btn btn-success">
                <i class="bi bi-plus" style="color:white;"></i>
                Add Genre
            </button></a>
    </div>
</form>
<br>
<div class="container" style="width: 800px;">
    <div class="row">
        <div class="col-12" class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Genre</th>
                        <th scope="col">Description</th>
                        <th scope="col" style="align-items: center; text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% genres.forEach(function(genre){ %>
                        <tr>
                            <td style="width: 25%;">
                                <%= genre.name %>
                            </td>
                            <td style="width: 50%;">
                                <%= genre.description %>
                            </td>
                            <td style="width: 25%; align-items: center; text-align: center;">
                                <form id="formAction<%= genre.id %>" action="/genre/<%= genre.id%>?_method=DELETE" method="post"></form>
                                <a class="btn btn-primary" href="/genre/<%= genre.id%>"><i class="bi bi-eye" style="color:white;"></i></a>
                                <a class="btn btn-success" href="/genre/<%= genre.id%>/edit"><i class="bi bi-pencil" style="color:white;"></i></a>
                                <a class="btn btn-danger" href="javascript:$('#formAction<%= genre.id %>').submit();"><i class="bi bi-trash" style="color:white;"></i></a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>